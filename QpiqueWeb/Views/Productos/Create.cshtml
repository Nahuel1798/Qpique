@model Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container-fluid py-5" id="app">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div
                    class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i> Crear Producto</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Categoría -->
                        <div class="mb-3">
                            <label asp-for="CategoriaId" class="form-label fw-semibold">Categoría</label>
                            <div class="input-group">
                                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                                    <option value="">-- Seleccione una categoría --</option>
                                </select>
                                <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-info">
                                    <i class="bi bi-tags"></i> Ver Categorías
                                </a>
                            </div>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Caña telescópica" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"
                                placeholder="Breve descripción del producto"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Precio -->
                        <div class="mb-3">
                            <label asp-for="Precio" class="form-label fw-semibold">Precio</label>
                            <input asp-for="Precio" class="form-control" type="number" step="0.01"
                                placeholder="Ej: 1999.99" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <!-- Stock -->
                        <div class="mb-3">
                            <label asp-for="Stock" class="form-label fw-semibold">Stock</label>
                            <input asp-for="Stock" class="form-control" type="number"
                                placeholder="Cantidad disponible" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <!-- Imagen -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Imagen</label>
                            <input type="file" name="ImagenArchivo" class="form-control" @@change="previewImage" />
                            <div v-if="preview" class="mt-3 text-center">
                                <img :src="preview" alt="Vista previa" class="img-thumbnail rounded shadow"
                                    style="max-height: 200px;" />
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save2"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background: linear-gradient(90deg, #003f88, #007bff);
        color: white;
        border-top-left-radius: 1.5rem;
        border-top-right-radius: 1.5rem;
    }

    .form-label {
        color: #003f88;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .btn-outline-info {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-info:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #00c851;
        border-color: #00c851;
    }

    .btn-success:hover {
        background-color: #007e33;
        border-color: #007e33;
    }

    .btn-outline-secondary:hover {
        background-color: #dee2e6;
    }

    .img-thumbnail {
        border: 2px solid #007bff;
        padding: 4px;
    }

    .bi {
        vertical-align: middle;
    }

    @@media (max-width: 576px) {
        .card {
            margin: 1rem;
        }

        .img-thumbnail {
            max-width: 100%;
        }
    }
</style>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.prod.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const { createApp, ref } = Vue;

        createApp({
            setup() {
                const preview = ref(null);

                const previewImage = (event) => {
                    const file = event.target.files[0];
                    if (file) {
                        preview.value = URL.createObjectURL(file);
                    } else {
                        preview.value = null;
                    }
                };

                return {
                    preview,
                    previewImage
                };
            }
        }).mount('#app');
    </script>
}
