@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : null;
    var avatarUrl = user?.Avatar ?? "/img/avatar.png";
    var rol = roles?.FirstOrDefault() ?? "Invitado";
    var nombreCompleto = user != null ? $"{user.Nombre} {user.Apellido}" : "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QpiqueWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QpiqueWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-white bg-white border-bottom shadow-sm py-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <img src="~/img/QpiqueLogo.jpeg" alt="Logo Qpique"
                         class="rounded-circle shadow-sm"
                         style="height: 40px; width: 40px; object-fit: cover;" />
                    <span class="fw-bold fs-4 text-primary">Qpique</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Nosotros">Nosotros</a></li>
                        <li class="nav-item"><a class="nav-link fw-semibold" asp-controller="Productos" asp-action="Index">Productos</a></li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@avatarUrl" class="rounded-circle me-2 shadow-sm border border-2" width="36" height="36" alt="Avatar" />
                                    <div class="d-flex flex-column">
                                        <span class="fw-semibold">@nombreCompleto</span>
                                        <small class="text-muted fst-italic">@rol</small>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm animate__animated animate__fadeIn" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-circle me-1"></i> Perfil</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link fw-semibold" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a></li>
                            <li class="nav-item"><a class="nav-link fw-semibold" asp-area="Identity" asp-page="/Account/Register">Registrarse</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- BODY PRINCIPAL -->
    <div class="d-flex flex-grow-1 container-fluid gap-4">
        @if (SignInManager.IsSignedIn(User))
        {
            <aside id="panelControl" class="d-none d-md-block border rounded shadow-sm p-3 bg-white position-sticky"
                   style="top: 100px; height: calc(100vh - 120px); overflow-y: auto; min-width: 260px;">
                <div class="d-flex flex-column align-items-center text-center mb-4">
                    <img src="@avatarUrl" class="rounded-circle mb-2 shadow-sm" alt="Avatar" width="80" height="80" style="object-fit: cover;" />
                    <h5 class="mb-0">@nombreCompleto</h5>
                    <small class="text-muted fst-italic">@rol</small>
                </div>
                <!-- Navegador lateral -->
                <nav class="nav flex-column">
                    <a class="nav-link px-0" asp-controller="Productos" asp-action="Index">
                        <i class="bi bi-box-seam me-2"></i> Productos
                    </a>
                    <a class="nav-link px-0" asp-controller="Ventas" asp-action="Index">
                        <i class="bi bi-cart-check me-2"></i> Historial Ventas
                    </a>
                    <a class="nav-link px-0" asp-controller="Clientes" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i> Clientes
                    </a>
                    <a class="nav-link px-0" asp-controller="Roles" asp-action="Index">
                        <i class="bi bi-shield-lock me-2"></i> Roles y Usuarios
                    </a>
                    <a class="nav-link px-0" asp-controller="Categoria" asp-action="Index">
                        <i class="bi bi-envelope-fill me-2"></i> Categorías
                    </a>
                </nav>
            </aside>
        }

        <main role="main" class="flex-grow-1 mt-1">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light pt-5 pb-3 mt-auto">
        <div class="container-fluid">
            <div class="row gy-4">
                <div class="col-md-4">
                    <a href="/" class="d-flex align-items-center mb-3 text-decoration-none text-light">
                        <img src="~/img/QpiqueLogo.jpeg" alt="Logo Qpique"
                             style="height:48px; width:48px; border-radius:50%; object-fit:cover;" class="me-2" />
                        <span class="fs-4 fw-bold">Qpique</span>
                    </a>
                    <p class="small text-muted">
                        Qpique es tu casa de pesca online, ofreciendo los mejores productos y asesoramiento para que disfrutes de la pesca como nunca.
                    </p>
                </div>

                <div class="col-md-4">
                    <h5 class="mb-3">Links útiles</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-light text-decoration-none hover-opacity">Inicio</a></li>
                        <li><a href="/Home/Nosotros" class="text-light text-decoration-none hover-opacity">Nosotros</a></li>
                        <li><a href="/Productos" class="text-light text-decoration-none hover-opacity">Productos</a></li>
                        <li><a href="/Home/Contacto" class="text-light text-decoration-none hover-opacity">Contacto</a></li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h5 class="mb-3">Redes Sociales</h5>
                    <div class="d-flex gap-3 fs-4">
                        <a href="https://facebook.com/Qpique" target="_blank" rel="noopener" class="text-light hover-opacity" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.instagram.com/qpiquesanluis?igsh=MWszNDBsM295Z2g5MQ==" target="_blank" rel="noopener" class="text-light hover-opacity" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="https://twitter.com/Qpique" target="_blank" rel="noopener" class="text-light hover-opacity" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="https://youtube.com/Qpique" target="_blank" rel="noopener" class="text-light hover-opacity" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-light mt-4" />
            <div class="text-center small text-muted">
                &copy; 2025 Qpique. Todos los derechos reservados.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
