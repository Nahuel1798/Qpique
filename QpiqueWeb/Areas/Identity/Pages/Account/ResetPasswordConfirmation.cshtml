@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmación de restablecimiento de contraseña";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center py-5">
    <div class="text-center bg-white shadow rounded p-4" style="max-width: 480px;">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <p class="lead">
            Tu contraseña ha sido restablecida exitosamente.
        </p>
        <p>
            Por favor, 
            <a asp-page="./Login" class="btn btn-primary btn-sm ms-2">
                haz clic aquí para iniciar sesión
            </a>
        </p>
    </div>
</div>
