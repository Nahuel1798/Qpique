@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de usuario";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_Layout";
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" class="form-control" placeholder="Nombre" />
                <label asp-for="Input.Nombre">Nombre</label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Apellido" class="form-control" placeholder="Apellido" />
                <label asp-for="Input.Apellido">Apellido</label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Teléfono" />
                <label asp-for="Input.PhoneNumber">Teléfono</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Avatar actual:</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.Input.AvatarActual))
                    {
                        <img src="@Model.Input.AvatarActual" alt="Avatar actual" class="img-thumbnail mb-2" style="max-width: 120px;" />
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Sin avatar</p>
                    }
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Input.AvatarNuevo" class="form-label">Nuevo avatar</label>
                <input asp-for="Input.AvatarNuevo" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.AvatarNuevo" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Administrador"))
            {
                <div class="mb-4">
                    <label asp-for="Input.Rol" class="form-label">Rol</label>
                    <select asp-for="Input.Rol" class="form-select" aria-label="Seleccionar rol">
                        <option value="" disabled selected>Seleccione un rol</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Empleado">Empleado</option>
                    </select>
                    <span asp-validation-for="Input.Rol" class="text-danger"></span>
                </div>
            }

            <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg w-100">
                Guardar cambios
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
