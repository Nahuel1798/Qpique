@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Eliminar datos personales";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<div class="alert alert-warning fw-bold" role="alert">
    <p>
        Esta acción eliminará permanentemente tu cuenta y todos tus datos personales. <br />
        <span class="text-danger">Esta operación no se puede deshacer.</span>
    </p>
</div>

<form id="delete-user" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    @if (Model.RequirePassword)
    {
        <div class="form-floating mb-4">
            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
            <label asp-for="Input.Password">Contraseña</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-danger btn-lg w-100">
        Eliminar datos y cerrar mi cuenta
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
