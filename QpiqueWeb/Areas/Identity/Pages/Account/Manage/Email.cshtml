@page
@model EmailModel
@{
    ViewData["Title"] = "Administrar correo electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="email-form" method="post" novalidate>

            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-4 input-group">
                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" disabled />
                    <label asp-for="Email">Correo electrónico actual</label>
                    <span class="input-group-text text-success fw-bold" title="Correo confirmado">✓</span>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" disabled />
                    <label asp-for="Email">Correo electrónico actual (no confirmado)</label>
                </div>
                <button type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-warning mb-4 w-100">
                    Enviar correo de verificación
                </button>
            }

            <div class="form-floating mb-4">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Nuevo correo electrónico" />
                <label asp-for="Input.NewEmail">Nuevo correo electrónico</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg w-100">
                Cambiar correo electrónico
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
