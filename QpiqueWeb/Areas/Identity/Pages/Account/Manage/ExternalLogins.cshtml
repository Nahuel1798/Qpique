@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Administra tus inicios de sesión externos";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<h3 class="mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

@if (Model.CurrentLogins?.Count > 0)
{
    <h5>Inicios de sesión registrados</h5>
    <table class="table table-striped align-middle">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td id="@($"login-provider-{login.LoginProvider}")" class="fw-semibold">
                        @login.ProviderDisplayName
                    </td>
                    <td class="text-end">
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post" class="d-inline">
                                <input type="hidden" name="LoginProvider" value="@login.LoginProvider" />
                                <input type="hidden" name="ProviderKey" value="@login.ProviderKey" />
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Remover este inicio de sesión">@* Mejor texto accesible *@
                                    Remover
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted fst-italic">No tienes inicios de sesión externos vinculados.</p>
}

@if (Model.OtherLogins?.Count > 0)
{
    <h5 class="mt-5">Añade otro servicio para iniciar sesión</h5>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="d-flex flex-wrap gap-2">
        @foreach (var provider in Model.OtherLogins)
        {
            <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Iniciar sesión usando tu cuenta de @provider.DisplayName">
                @provider.DisplayName
            </button>
        }
    </form>
}
