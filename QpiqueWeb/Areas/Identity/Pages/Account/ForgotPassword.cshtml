@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 75vh;">
    <div class="contenido-glassLogin p-3 rounded shadow" style="max-width: 500px; width: 100%; min-height: 400px;">
        <div class="text-center mb-3">
            <h1 class="mb-2 text-white">@ViewData["Title"]</h1>
            <h6 class="text-muted fw-light">Ingresa tu correo electrónico para restablecer tu contraseña.</h6>
            <hr class="w-25 mx-auto" />
        </div>

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                    class="form-control"
                    autocomplete="username"
                    placeholder="nombre@ejemplo.com"
                    aria-required="true"
                    aria-describedby="emailHelp" />
                <label asp-for="Input.Email">Correo electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100" aria-label="Restablecer contraseña">
                <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                Restablecer contraseña
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const form = document.querySelector('form');
        const button = form.querySelector('button[type="submit"]');
        const spinner = button.querySelector('.spinner-border');

        form.addEventListener('submit', () => {
            button.disabled = true;
            spinner.classList.remove('d-none');
        });
    </script>
}
