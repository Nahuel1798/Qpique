@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <div class="text-center p-4 rounded shadow-sm border bg-light" style="max-width: 480px;">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="bi bi-box-arrow-right me-2"></i> Haz clic aquí para cerrar sesión
                </button>
            </form>
        }
        else
        {
            <p class="fs-5 text-success">Has cerrado sesión correctamente de la aplicación.</p>
            <a asp-page="/Index" class="btn btn-primary mt-3 px-4">
                <i class="bi bi-house-door me-2"></i> Volver al inicio
            </a>
        }
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
