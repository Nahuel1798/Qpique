@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="row w-100">
        <div class="col-md-5 col-lg-4 mx-auto">
            <section class="p-4 shadow rounded bg-white">
                <h1 class="mb-3 text-center">@ViewData["Title"]</h1>
                <h5 class="text-center text-secondary mb-4">Restablece tu contraseña</h5>
                <hr />

                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input asp-for="Input.Code" type="hidden" />

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nombre@ejemplo.com" aria-required="true" />
                        <label asp-for="Input.Email">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Contraseña nueva" aria-required="true" />
                        <label asp-for="Input.Password">Nueva contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirmar contraseña" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Restablecer</button>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
