@page
@model LockoutModel
@{
    ViewData["Title"] = "Cuenta bloqueada";
}

<div class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
    <div class="text-center p-4 rounded shadow-sm border border-danger bg-light" style="max-width: 480px;">
        <h1 class="display-4 text-danger mb-3">@ViewData["Title"]</h1>
        <p class="fs-5 text-danger mb-4">
            Esta cuenta ha sido bloqueada, por favor inténtelo de nuevo más tarde.
        </p>
        <a asp-page="/Index" class="btn btn-danger px-4 me-2">
            <i class="bi bi-house-door me-1"></i> Volver al inicio
        </a>
        <a asp-page="/Account/Login" class="btn btn-outline-danger">
            <i class="bi bi-box-arrow-in-right me-1"></i> Intentar iniciar sesión
        </a>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
